<section class="has-text-centered">
<p style="color: green"><%= notice %></p>

<p class="is-size-3 has-text-weight-bold">Brands</p>

<div id="brands">
  <% @brands.each do |brand| %>
    <%= render brand %>
    <p>
    <br>
      <%= link_to "Show this brand", brand,  class:"button is-primary is-light " %>
    </p>
  <% end %>
</div>

<%= link_to "New brand", new_brand_path, class:"button is-primary is-light " %>
</section>